<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ArcLoader">
        <attr name="outsideLineSize" format="dimension" />
        <attr name="insideLineSize" format="dimension" />
        <attr name="outsideLineCap" format="enum" >
            <enum name="BUTT" value="0"/>
            <enum name="ROUND" value="1"/>
            <enum name="SQUARE" value="2"/>
        </attr>
        <attr name="insideLineCap" format="enum" >
            <enum name="BUTT" value="0"/>
            <enum name="ROUND" value="1"/>
            <enum name="SQUARE" value="2"/>
        </attr>
        <attr name="outsideLineColor" format="color" />
        <attr name="insideLineColor" format="color" />
        <attr name="total" format="integer" />
        <attr name="current" format="integer" />
    </declare-styleable>

    <declare-styleable name="AnimatedArcLoader">
        <attr name="refresh" format="integer" />
    </declare-styleable>
</resources>